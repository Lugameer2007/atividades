#include <stdio.h>
#include <locale.h>

int main(){

setlocale(LC_ALL, "Portuguese");
int matriz [3][3], maior, menor;
    for(int i = 0; i < 3; i++);
{
	for(int j = 0; j < 3; i++);
{
	printf("Digite a posicao [%d][%d]:", i, j);
	scanf("%d", &matriz[i][j]);
	if(matriz[i][j] > maior)
	maior = matriz[i][j];
	if(matriz[i][j] < menor)
	menor = matriz[i][j];
}
printf("\n0 maior valor: %d", maior);
printf("\n0 menor valor: %d", menor);
}
}
